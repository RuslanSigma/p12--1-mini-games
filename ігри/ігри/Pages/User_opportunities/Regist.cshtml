@page "/register"
@model ігри.Pages.User_opportunities.RegistModel
@{
    ViewData["Title"] = "Register";
}
    <div>
        <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <form id="registerForm" method="post">
            @Html.AntiForgeryToken()
            <label for="username"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="Username" id="username" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="Password" id="psw" required>
            <hr>
            <button type="submit" class="registerbtn">Register</button>
        </form>


        <p>@Model.Message</p>
        </div>
        <div class="container signin">
        <p>Already have an account? <a class="auth-btn" asp-page="/User_opportunities/Sign_in">Sign In</a>.</p>
        </div>
    </div>
