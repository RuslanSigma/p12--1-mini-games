@page
@model ігри.Pages.achievments_pageModel
@{
}

<div class="container">
    <div class="content2">
        <main role="main" class="pb-3">
            <h2 class="centered-heading">Мої досягнення</h2>
            <div class="triangle-button" onclick="toggleAchievements()"></div>
            <div class="achievements-container" id="achievements-container">
            </div>

        </main>
    </div>
</div>

<script>
    const achievements = [
        {
            imgSrc: '~/images/achievement1.png',
            title: 'Досягнення 1',
            description: 'Опис досягнення 1',
            status: 'Отримано'
        },
        {
            imgSrc: '~/images/achievement2.png',
            title: 'Досягнення 2',
            description: 'Опис досягнення 2',
            status: 'Не отримано'
        }
    ];

    function createAchievementCard(achievement) {
        return `
            <div class="achievement-card">
                <img src="${achievement.imgSrc}" alt="${achievement.title}">
                <h3>${achievement.title}</h3>
                <p>${achievement.description}</p>
                <div class="achievement-status">
                    <span>Статус:</span> ${achievement.status}
                </div>
            </div>
        `;
    }

    function loadAchievements() {
        const container = document.getElementById('achievements-container');
        achievements.forEach(achievement => {
            container.innerHTML += createAchievementCard(achievement);
        });
    }

    document.addEventListener('DOMContentLoaded', loadAchievements);

    function toggleAchievements() {
        var container = document.getElementById('achievements-container');
        var button = document.querySelector('.triangle-button');
        if (container.style.display === "none" || container.style.display === "") {
            container.style.display = "flex";
            button.classList.add('open');
        } else {
            container.style.display = "none";
            button.classList.remove('open');
        }
    }
</script>